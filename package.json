{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "test:a11y": "pa11y http://127.0.0.1:8000 --runner axe",
        "test:a11y-full": "pa11y-ci --sitemap http://127.0.0.1:8000/sitemap.xml",
        "test:a11y-ci": "concurrently \"php artisan serve\" \"npm run test:a11y-wait\"",
        "test:a11y-wait": "npx wait-on http://127.0.0.1:8000 && npm run test:a11y",
        "test:a11y-simple": "pa11y http://127.0.0.1:8000 --runner axe --wait 5000 --timeout 30000",
        "test:a11y-debug": "pa11y http://127.0.0.1:8000 --runner axe --debug --chrome-flags='--no-sandbox --disable-dev-shm-usage --disable-gpu --disable-web-security --allow-running-insecure-content'",
        "test:pwa": "lhci autorun --config=.lighthouseci.config.js",
        "test:pwa-local": "npm run build && php artisan serve --port=8000 & npx wait-on http://127.0.0.1:8000 && npm run test:pwa",
        "audit:pwa": "lighthouse http://127.0.0.1:8000 --only-categories=pwa --chrome-flags='--headless --no-sandbox' --output=html --output-path=./pwa-audit.html",
        "pwa:validate": "pwa-asset-generator --help || npm install -g pwa-asset-generator"
    },
    "devDependencies": {
        "@lhci/cli": "^0.15.1",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/vite": "^4.0.0",
        "alpinejs": "^3.14.9",
        "autoprefixer": "^10.4.21",
        "axios": "^1.8.2",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.2.0",
        "lighthouse": "^12.8.0",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "vite": "^6.2.4",
        "wait-on": "^8.0.3",
        "pa11y": "^9.0.0",
        "pa11y-ci": "^3.1.0",
        "@alpinejs/focus": "^3.14.9",
        "@axe-core/playwright": "^4.10.2",
        "focus-trap": "^7.6.5",
        "pwa-asset-generator": "^8.0.5"
    },
    "dependencies": {
        "chart.js": "^4.5.0",
        "chartjs-plugin-annotation": "^3.1.0",
        "chartjs-plugin-zoom": "^2.2.0",
        "focus-trap": "^7.6.5",
        "laravel-echo": "^1.15.3",
        "pusher-js": "^8.4.0-rc2"
    }
}

































































